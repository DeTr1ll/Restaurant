@model TextField
@{ string strTitle = "Редагувати текстове поле";
                ViewBag.Title = strTitle; }

<script src="~/js/ckeditor/ckeditor.js"></script>
<section>
    <div class="container">
        <div>
            <h2>@strTitle</h2>
            <div>
                <form asp-area="Admin" asp-controller="TextField" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="div-box">
                        <label asp-for="CodeWord"></label>
                        <input asp-for="CodeWord" />
                        <span asp-validation-for="CodeWord"></span>
                    </div>
                    <div class="div-box">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="div-box">
                        <label asp-for="Text"></label>
                        <textarea asp-for="Text"></textarea>
                        <span asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </section>


        <script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEdit.updateElement();
    }
        </script>
