@model Category
@{
    string strTitle = "Редагувати категорію";
    ViewBag.Title = strTitle;
}
<section>
    <div class="container">
        <h2>@strTitle</h2>
        <hr />

        <div class="row">

            <div>
                <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order"></label>
                        <input asp-for="Order" />
                        <span asp-validation-for="Order"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsVisible"></label>
                        <input asp-for="IsVisible" />
                        <span asp-validation-for="IsVisible"></span>
                    </div>
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Повернутись до списку категорій</a>
        </div>
        </div>
</section>