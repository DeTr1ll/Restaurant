@model IEnumerable<Dish>

@{
    ViewData["Title"] = "Страви";
}
<section>
    <div class="container">
        <p>
            <a asp-area="Admin" asp-controller="Dish" asp-action="Edit" asp-route-id="">Створити страву</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.IsVisible)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsSpecial)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => entity.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => entity.Category.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => entity.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => entity.IsVisible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => entity.IsSpecial)
        </td>

        <td>
            <a asp-action="Edit" asp-route-id="@entity.Id">Редагувати</a> |
            <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Dish" asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@entity.Id">
                <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Видалити</a>
            </form>
        </td>
    </tr>}
            </tbody>
        </table>
        </div>
</section>